@model UtahTraffix.Models.Prediction

<h1>Crash Severity Score:</h1>

<!--<img src="https://cdn1.vectorstock.com/i/thumb-large/79/20/colored-scale-gauge-indicator-with-different-vector-31047920.jpg" width="100" />
-->
<h4>1 - 5</h4>
<h4>(minor - severe)</h4>
@if (Model.PredictedValue < 1.49)
{
    <h2 style=" background-color: green; width:120px; text-align: center">1</h2>
}
else if (Model.PredictedValue < 2.49)
{
    <h2 style=" background-color: yellowgreen; width: 120px; text-align: center">2</h2>
}
else if (Model.PredictedValue < 3.49)
{
    <h2 style=" background-color: yellow; width: 120px; text-align: center">3</h2>
}
else if (Model.PredictedValue < 4.49)
{
    <h2 style="background-color: orange; width: 120px; text-align: center">4</h2>
}
else
{
    <h2 style="background-color: red; width: 120px; text-align: center">5</h2>
}

<form asp-action="Predict" method="post" asp-controller="Home">
    <button type="submit" class="btn btn-primary">Make Another Prediction</button>
</form>

